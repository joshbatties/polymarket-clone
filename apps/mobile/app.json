{
  "expo": {
    "name": "Aussie Markets",
    "slug": "aussie-markets",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.svg",
    "splash": {
      "image": "./assets/splash.svg",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.jpcgroup.aussiemarkets",
      "config": {
        "usesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.in-app-payments": ["merchant.com.jpcgroup.aussiemarkets"]
      },
      "merchantId": "merchant.com.jpcgroup.aussiemarkets"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.svg",
        "backgroundColor": "#007AFF"
      },
      "package": "com.jpcgroup.aussiemarkets"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.svg"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.jpcgroup.aussiemarkets",
          "enableGooglePay": false
        }
      ]
    ],
    "scheme": "aussie-markets",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
